data Tree<a> where
    Node(a, Tree<a>, Tree<a>)
    Empty

/*m<a> is Mappable when*/
    /*map(m<a>, <a> -> b) : m<b>*/

/*Tree<a> is Mappable because*/
fun map(tree : Tree<a>, fn : <a> -> b) : Tree<b> -> 
    case tree of 
        Node(data, left, right) -> 
            data_ = fn(data)
            left_ = map(left, fn)
            right_ = map(right,fn)
            Node(data_, left_, right_)
        Empty -> Empty

/*[a] is Mappable because*/
fun map(list : [a], fn : <a> -> b) : [b] -> 
    case list of
        [] -> []
        [a|as] -> [fn(a) | map(as, fn)]

